// @ts-nocheck
{
	"compilerOptions": {
		"module": "es6",
		"target": "es2020",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": ["./src"],
			"@utils/*": ["./src/utils/*"],
			"@actor/*": ["./src/utils/*"],
			"@item/*": ["./src/item/*"],
			"@components/*": ["./src/components/*"],
			"@system/*": ["./src/system/*"]
		}
	},
	"include": ["src/**/*.js"],
	"exclude": ["node_modules/*", "**/node_modules/*", "dist/*"],
	"typeAcquisition": {
		"exclude": ["ismobilejs", "source-map", "ts-interface-checker"]
	}
}
