<div class="main border">
	<div class="damage">
		<label>{{localize "WEAPON.DAMAGE"}}</label>
		<input name="system.damage" type="number" value="{{system.damage}}" data-dtype="Number" />
	</div>
	<div class="weight">
		<label>{{localize "GEAR.WEIGHT"}}</label>
		<select name="system.weight">
			{{#select system.weight}}
			<option value="tiny">{{localize "WEIGHT.TINY"}}</option>
			<option value="light">{{localize "WEIGHT.LIGHT"}}</option>
			<option value="regular">{{localize "WEIGHT.REGULAR"}}</option>
			<option value="heavy">{{localize "WEIGHT.HEAVY"}}</option>
			{{/select}}
		</select>
	</div>
	<div class="weapon-category">
		<label>{{localize "WEAPON.CATEGORY"}}</label>
		<select name="system.category">
			{{#select system.category}}
			<option value="melee">{{localize "WEAPON.MELEE"}}</option>
			<option value="ranged">{{localize "WEAPON.RANGED"}}</option>
			{{/select}}
		</select>
	</div>
	<div class="grip">
		<label>{{localize "WEAPON.GRIP"}}</label>
		<select name="system.grip">
			{{#select system.grip}}
			<option value="1h">{{localize "WEAPON.1H"}}</option>
			<option value="2h">{{localize "WEAPON.2H"}}</option>
			{{/select}}
		</select>
	</div>
	<div class="range">
		<label>{{localize "WEAPON.RANGE"}}</label>
		<select name="system.range">
			{{#select system.range}}
			<option value="arm">{{localize "RANGE.ARM"}}</option>
			<option value="near">{{localize "RANGE.NEAR"}}</option>
			<option value="short">{{localize "RANGE.SHORT"}}</option>
			<option value="long">{{localize "RANGE.LONG"}}</option>
			<option value="distant">{{localize "RANGE.DISTANT"}}</option>
			{{/select}}
		</select>
	</div>
	{{#if (eq system.category "ranged")}}
	<div>
		<label>{{localize "WEAPON.AMMO"}}</label>
		<select name="system.ammo">
			{{#select system.ammo}}
			<option value="other">{{ localize "WEAPON.AMMO_OTHER" }}</option>
			<option value="arrows">{{ localize "WEAPON.AMMO_ARROWS"}}</option>
			{{/select}}
		</select>
	</div>
	{{/if}}
</div>

<div class="border flex column">
	<div class="column-header">
		<label>{{localize "WEAPON.FEATURES.TITLE"}}</label>
	</div>
	<div class="features flex row">
		{{#if (eq system.category "melee")}}
		<a class="feature {{# if system.features.edged}}active{{/if}}" data-feature="edged" title="{{localize "WEAPON.FEATURES.EDGED"}}">
			<i class="far {{#if system.features.edged}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
			{{localize "WEAPON.FEATURES.EDGED"}}
		</a>

		<a class="feature {{# if system.features.pointed}}active{{/if}}" data-feature="pointed" title="{{localize "WEAPON.FEATURES.POINTED"}}">
			<i class="far {{#if system.features.pointed}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
			{{localize "WEAPON.FEATURES.POINTED"}}
		</a>

		<a class="feature {{# if system.features.blunt}}active{{/if}}" data-feature="blunt" title="{{localize "WEAPON.FEATURES.BLUNT"}}">
			<i class="far {{#if system.features.blunt}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
			{{localize "WEAPON.FEATURES.BLUNT"}}
		</a>

		<a class="feature {{# if system.features.parrying}}active{{/if}}" data-feature="parrying" title="{{localize "WEAPON.FEATURES.PARRYING"}}">
			<i class="far {{#if system.features.parrying}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
			{{localize "WEAPON.FEATURES.PARRYING"}}
		</a>

		<a class="feature {{# if system.features.shield}}active{{/if}}" data-feature="shield" title="{{localize "WEAPON.FEATURES.SHIELD"}}">
			<i class="far {{#if system.features.shield}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
			{{localize "WEAPON.FEATURES.SHIELD"}}
		</a>

		<a class="feature {{# if system.features.hook}}active{{/if}}" data-feature="hook" title="{{localize "WEAPON.FEATURES.HOOK"}}">
			<i class="far {{#if system.features.hook}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
			{{localize "WEAPON.FEATURES.HOOK"}}
		</a>
		{{/if}}
		{{#if (eq system.category "ranged")}}
		<a class="feature {{# if system.features.slowReload}}active{{/if}}" data-feature="slowReload" title="{{localize "WEAPON.FEATURES.SLOW_RELOAD"}}">
			<i class="far {{#if system.features.slowReload}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
			{{localize "WEAPON.FEATURES.SLOW_RELOAD"}}
		</a>
		{{/if}}
	</div>
	<div class="">
		<label>{{localize "WEAPON.FEATURES.OTHERS"}}</label>
		{{editor system.features.others target="system.features.others"  owner=owner button=true editable=true}}
	</div>
</div>
<div class="roll-modifiers border">
	<!-- prettier-ignore -->
	{{! prettier-ignore }}
{{> systems/forbidden-lands/templates/components/modifiers-component.hbs }}
</div>
