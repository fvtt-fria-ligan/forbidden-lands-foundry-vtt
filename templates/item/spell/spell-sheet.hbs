<form class="{{cssClass}}" autocomplete="off">
	<div class="header border">
		<div class="avatar" style="grid-row: 1/3">
			<img class="profile-img" src="{{img}}" data-edit="img" title="{{name}}" />
		</div>
		<div class="header-stats">
			<label>{{localize "GEAR.NAME"}}</label>
			<div class="name">
				<input name="name" type="text" value="{{name}}" />
			</div>
			<label>{{localize "SPELL.RANK"}}</label>
			<div class="rank">
				<input name="system.rank" type="text" value="{{system.rank}}" />
			</div>
			<label>{{localize "SPELL.SPELL_TYPE"}}</label>
			<div class="spell-type">
				<select name="system.spellType">
					{{selectOptions spellTypes selected=system.spellType localize=true}}
				</select>
			</div>
		</div>
	</div>
	<div class="item">
		<div class="range">
			<label>{{localize "SPELL.RANGE"}}</label>
			<input name="system.range" type="text" value="{{system.range}}" />
		</div>
		<div class="duration">
			<label>{{localize "SPELL.DURATION"}}</label>
			<input name="system.duration" type="text" value="{{system.duration}}" />
		</div>
		<div class="ingredient">
			<label>{{localize "SPELL.INGREDIENT"}}</label>
			<input name="system.ingredient" type="text" value="{{system.ingredient}}" />
		</div>
		<div class="spell-description">
			<label>{{localize "SPELL.DESCRIPTION"}}</label>
			{{editor system.description target="system.description" owner=owner button=true editable=true}}
		</div>
	</div>
</form>
