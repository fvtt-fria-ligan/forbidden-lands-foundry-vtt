<form class="{{cssClass}}" autocomplete="off">
	<div class="header border">
		<div class="avatar">
			<img class="profile-img" src="{{img}}" data-edit="img" title="{{name}}" />
		</div>
		<div class="stats">
			<label>{{localize "MONSTER.NAME"}}:</label>
			<input name="name" type="text" value="{{name}}" />
			<label>{{localize "MONSTER.DICE"}}:</label>
			<div class="flex gap">
				{{#unless system.usingStrength}}
					<input name="system.dice" type="number" data-dtype="Number" value="{{system.dice}}" />
					<input
						name="system.usingStrength"
						type="checkbox"
						data-dtype="Boolean"
						{{checked system.usingStrength}}
						data-tooltip="{{localize 'ATTACK.USE_STRENGTH'}}"
					/>
				{{else}}
					<label data-tooltip="{{localize 'ATTACK.USE_STRENGTH'}}">
						<span class="icon">
							<i class="fas fa-hand-fist"></i>
						</span>
						<input
							name="system.usingStrength"
							type="checkbox"
							data-dtype="Boolean"
							{{checked system.usingStrength}}
						/>
					</label>
				{{/unless}}

			</div>
			<label>{{localize "MONSTER.RANGE"}}:</label>
			<select name="system.range">
				{{selectOptions rangeOptions selected=system.range localize=true}}
			</select>
			<label>{{localize "MONSTER.DAMAGE"}}:</label>
			<input name="system.damage" type="number" data-dtype="Number" value="{{system.damage}}" />
			<label>{{localize "MONSTER.DAMAGE_TYPE"}}:</label>
			<select name="system.damageType">
				{{selectOptions damageTypeOptions selected=system.damageType localize=true}}
			</select>
		</div>
	</div>
	<div class="item">
		<div class="monster-description">
			<label>{{localize "MONSTER.DESCRIPTION"}}</label>
			{{editor system.description target="system.description" owner=owner button=true editable=true}}
		</div>
	</div>
</form>
