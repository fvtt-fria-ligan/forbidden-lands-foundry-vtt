<form class="{{cssClass}}" autocomplete="off">
	<div class="header border">
		<div class="avatar" style="grid-row: 1/3">
			<img class="profile-img" src="{{img}}" data-edit="img" title="{{name}}" />
		</div>
		<div class="header-stats">
			<label>{{localize "GEAR.NAME"}}</label>
			<div class="name">
				<input name="name" type="text" value="{{name}}" />
			</div>
			<label>{{localize "TALENT.TYPE"}}</label>
			<select name="system.type">
				{{selectOptions talentTypes selected=system.type localize=true}}
			</select>
			{{#if ranks}}
			<label>{{localize "TALENT.RANK"}}</label>
			<div class="rank">
				<input name="system.rank" type="text" value="{{system.rank}}" />
			</div>
			{{/if}}
		</div>
	</div>
	<div class="item">
		<div class="talent-description">
			<label>{{localize "TALENT.DESCRIPTION"}}</label>
			{{editor system.description target="system.description"  owner=owner button=true editable=true}}
		</div>
{{> systems/forbidden-lands/templates/components/modifiers-component.hbs }}
	</div>
</form>
